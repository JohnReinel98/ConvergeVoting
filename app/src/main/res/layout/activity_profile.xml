<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.jrc.convergevoting.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.dd.processbutton.FlatButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Choose"
            android:onClick="ProfPicPress"
            android:textColor="@android:color/white"
            app:pb_colorNormal="@color/colorPrimary" />

        <EditText
            android:id="@+id/profileName"
            android:layout_gravity="center"
            android:hint="Enter Profile Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/profileVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <com.dd.processbutton.FlatButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Verify"
            android:onClick="ProfVerifyPress"
            android:textColor="@android:color/white"
            app:pb_colorNormal="@color/colorPrimary" />

        <com.dd.processbutton.FlatButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Save"
            android:onClick="ProfSavePress"
            android:textColor="@android:color/white"
            app:pb_colorNormal="@color/colorPrimary" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
